<?xml version="1.0" encoding="utf-8"?>
<com.linstick.timeaxis.views.CustomFeatureView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:id="@+id/ll_add_bottle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_feature_light_gray_selector">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:text="分享"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_get_bottle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bg_feature_light_gray_selector">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:text="拾荒"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_feature_light_gray_selector">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:text="记录"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_browse_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/bg_feature_light_gray_selector">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:text="时间轴"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_browse_memo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="350dp"
        android:clickable="true"
        android:background="@drawable/bg_feature_light_gray_selector">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="16sp"
            android:text="计划"/>

    </LinearLayout>

</com.linstick.timeaxis.views.CustomFeatureView>